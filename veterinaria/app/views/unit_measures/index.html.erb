<%- model_class = UnitMeasure -%>
<div class="row">&nbsp;</div>
<div class="page-header">
  <h1><%=t '.title', :default => 'UNIDAD DE MEDIDA' %></h1>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th style="text-align:center">Id</th>
      <th style="text-align:center">Nombre corto</th>
      <th style="text-align:center">Nombre</th>
      <th style="text-align:center">Descripción</th>
      <th style="text-align:center">Fecha creación</th>
      <th style="text-align:center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @unit_measures.each do |unit_measure| %>
      <tr>
        <td><%= link_to unit_measure.id, unit_measure_path(unit_measure) %></td>
        <td><%= unit_measure.short_name %></td>
        <td><%= unit_measure.name %></td>
        <td><%= unit_measure.description %></td>
        <td><%=l unit_measure.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_unit_measure_path(unit_measure), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      unit_measure_path(unit_measure),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.submit.new")),
            new_unit_measure_path,
            :class => 'btn btn-primary' %>
