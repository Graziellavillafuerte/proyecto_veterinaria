<%- model_class = Province -%>
<div class="row">&nbsp;</div>
<div class="page-header">
  <h1><%=t '.title', :default => 'PROVINCIA' %></h1>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th style="text-align: center">Id Provincia</th>
      <th style="text-align: center">Provincia</th>
      <th style="text-align: center">Departamento</th>
      <th style="text-align: center">Fecha de creaci√≥n</th>
      <th style="text-align: center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @provinces.each do |province| %>
      <tr>
        <td><%= link_to province.id, province_path(province) %></td>
        <td><%= province.name %></td>
        <td><%= province.department_id %></td>
        <td><%=l province.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_province_path(province), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      province_path(province),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.submit.new")),
            new_province_path,
            :class => 'btn btn-primary' %>
