<%- model_class = Patient -%>
<div class="row">&nbsp;</div>
<div class="page-header">
  <h3><b>VER PACIENTE</b></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nombre:</strong></dt>
  <dd><%= @patient.name %></dd>
  <dt><strong>Color:</strong></dt>
  <dd><%= @patient.color %></dd>
  <dt><strong>Fecha</br>cumplea;os:</strong></dt>
  <dd><%= @patient.birthday %></dd>
  <dt><strong>Sexo:</strong></dt>
  <dd><%= @patient.sex %></dd>
  <dt><strong>Peso:</strong></dt>
  <dd><%= @patient.weight %></dd>
  <dt><strong>Id Cliente:</strong></dt>
  <dd><%= @patient.client_id %></dd>
</dl>

<%= link_to t('.back', :default => t("CERRAR")),
              patients_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("EDITAR")),
              edit_patient_path(@patient), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("ELIMINAR")),
              patient_path(@patient),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'EstÃ¡ seguro de eliminar?')) },
              :class => 'btn btn-danger' %>
