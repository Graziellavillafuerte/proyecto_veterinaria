<%- model_class = Department -%>
<div class="row"></div>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nombre:</strong></dt>
  <dd><%= @department.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.submit.back")),
              departments_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.submit.edit")),
              edit_department_path(@department), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.submit.destroy")),
              department_path(@department),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
