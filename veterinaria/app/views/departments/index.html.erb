<%- model_class = Department -%>
<div class="row">&nbsp;</div>
<div class="page-header">
  <h1><%=t '.title', :default => 'DEPARTAMENTO' %></h1>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th style="text-align: center">Id</th>
      <th style="text-align: center">Nombre</th>
      <th style="text-align: center">Fecha creaci√≥n</th>
      <th style="text-align: center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= link_to department.id, department_path(department) %></td>
        <td><%= department.name %></td>
        <td><%=l department.created_at %></td>
        <td align="center">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_department_path(department), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      department_path(department),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="col-md-6 col-md-offset-4">
<%= link_to t('.new', :default => t("helpers.submit.new")),
            new_department_path,
            :class => 'btn btn-primary' %>
</div>