<%- model_class = Client -%>
<div class="row">&nbsp;</div>
<div class="page-header">
  <h3><b><%=t '.title', :default => 'VER CLIENTE'%></b></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nombre:</strong></dt>
  <dd><%= @client.name %></dd>
  <dt><strong>Apellido Paterno:</strong></dt>
  <dd><%= @client.firstlastname %></dd>
  <dt><strong>Apellido materno:</strong></dt>
  <dd><%= @client.secondlastname %></dd>
  <dt><strong>Fecha nacimiento:</strong></dt>
  <dd><%= @client.birthday %></dd>
  <dt><strong>Direccion:</strong></dt>
  <dd><%= @client.direction %></dd>
  <dt><strong>Telefono:</strong></dt>
  <dd><%= @client.phone %></dd>
  <dt><strong>Correo-e:</strong></dt>
  <dd><%= @client.email %></dd>
</dl>

<%= link_to t('.back', :default => t("CERRAR")),
              clients_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("EDITAR")),
              edit_client_path(@client), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("ELIMINAR")),
              client_path(@client),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'EstÃ¡ seguro de eliminar?')) },
              :class => 'btn btn-danger' %>
