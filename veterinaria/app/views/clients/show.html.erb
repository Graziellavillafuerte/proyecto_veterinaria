<%- model_class = Client -%>
<div class="page-header">
  <h3><b><%=t '.title', :default => 'VER CLIENTE'%></b></h3>
</div>

<%= form_for @client, :html => { :class => "form-horizontal client" } do |f| %>

    <% if @client.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @client.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <div class="col-md-4">
    <div class="control-group">
      <%= f.label :"Nombre", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'form-control', :readonly => 'readonly' %>
      </div>
      <%= error_span(@client[:name]) %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="control-group">
     <%= f.label :"Apellido paterno", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :firstlastname, :class => 'form-control', :readonly => 'readonly' %>
      </div>
      <%= error_span(@client[:firstlastname]) %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="control-group">
      <%= f.label :"Apellido materno", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :secondlastname, :class => 'form-control', :readonly => 'readonly' %>
      </div>
      <%= error_span(@client[:secondlastname]) %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="control-group">
     <%= f.label :"Fecha de nacimiento", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :birthday, :class => 'form-control', :readonly => 'readonly' %>
      </div>
      <%= error_span(@client[:birthday]) %>
    </div>
  </div>
  <div class="col-md-8">
    <div class="control-group">
      <%= f.label :"Dirección", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :direction, :class => 'form-control', :readonly => 'readonly' %>
      </div>
      <%= error_span(@client[:direction]) %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="control-group">
      <%= f.label :"Teléfono", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :phone, :class => 'form-control', :readonly => 'readonly' %>
      </div>
      <%= error_span(@client[:phone]) %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="control-group">
      <%= f.label :"Correo-e", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :class => 'form-control', :readonly => 'readonly' %>
      </div>
      <%= error_span(@client[:email]) %>
    </div>
  </div>

  
<% end %>
<div class="row">&nbsp;</div>
<div class="row">&nbsp;</div>
<div class="col-md-6 col-md-offset-4">
<%= link_to t('.back', :default => t("helpers.submit.back")),
              clients_path, :class => 'btn btn-primary'  %>
<%= link_to t('.edit', :default => t("helpers.submit.edit")),
              edit_client_path(@client), :class => 'btn btn-primary' %>
<%= link_to t('.destroy', :default => t("helpers.submit.destroy")),
              client_path(@client),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Está seguro de eliminar?')) },
              :class => 'btn btn-primary' %>
</div>