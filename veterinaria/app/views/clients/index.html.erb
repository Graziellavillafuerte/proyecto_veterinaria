<%- model_class = Client -%>
<div class="row">&nbsp;</div>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th style="text-align: center"><%= model_class.human_attribute_name(:id) %></th>
      <th style="text-align: center"><%= model_class.human_attribute_name(:name) %></th>
      <th style="text-align: center"><%= model_class.human_attribute_name(:firstlastname) %></th>
      <th style="text-align: center"><%= model_class.human_attribute_name(:secondlastname) %></th>
      <th style="text-align: center"><%= model_class.human_attribute_name(:birthday) %></th>
      <th style="text-align: center"><%= model_class.human_attribute_name(:direction) %></th>
      <th style="text-align: center"><%= model_class.human_attribute_name(:phone) %></th>
      <th style="text-align: center"><%= model_class.human_attribute_name(:email) %></th>
      <th style="text-align: center"><%= model_class.human_attribute_name(:created_at) %></th>
      <th style="text-align: center"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= link_to client.id, client_path(client) %></td>
        <td><%= client.name %></td>
        <td><%= client.firstlastname %></td>
        <td><%= client.secondlastname %></td>
        <td><%= client.birthday %></td>
        <td><%= client.direction %></td>
        <td><%= client.phone %></td>
        <td><%= client.email %></td>
        <td><%=l client.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_client_path(client), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      client_path(client),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_client_path,
            :class => 'btn btn-primary' %>
