<%= form_for @citation_detail, :html => { :class => "form-horizontal citation_detail" } do |f| %>

    <% if @citation_detail.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@citation_detail.errors.count, "error") %> prohibited this citation_detail from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @citation_detail.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
