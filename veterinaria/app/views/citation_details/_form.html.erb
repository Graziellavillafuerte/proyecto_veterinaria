      <%= f.text_field :quantity, :class => 'form-control' %>
    </div>
    <%= error_span(@citation_detail[:quantity]) %>
  </div>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'form-control' %>
    </div>
    <%= error_span(@citation_detail[:amount]) %>
  </div>
  <div class="control-group">
    <%= f.label :citation_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :citation_id, :class => 'form-control' %>
    </div>
    <%= error_span(@citation_detail[:citation_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :service_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :service_id, :class => 'form-control' %>
    </div>
    <%= error_span(@citation_detail[:service_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            citation_details_path, :class => 'btn btn-default' %>

<% end %>
