<%= form_for @district, :html => { :class => "form-horizontal district" } do |f| %>

    <% if @district.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@district.errors.count, "error") %> prohibited this district from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @district.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@district[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :province_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :province_id, :class => 'form-control' %>
    </div>
    <%= error_span(@district[:province_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            districts_path, :class => 'btn btn-default' %>

<% end %>
