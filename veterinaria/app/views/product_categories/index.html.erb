<%- model_class = ProductCategory -%>
<div class="row">&nbsp;</div>
<div class="page-header">
  <h3><b><%=t '.title', :default => 'CATEGORIA DE PRODUCTOS' %></b></h3>
</div>
<table class="table table-striped table-bordered table:hover">
  <thead>
    <tr>
      <th style="text-align:center">Id</th>
      <th style="text-align:center">Nombre</th>
      <th style="text-align:center">Descripción</th>
      <th style="text-align:center">Fecha creación</th>
      <th style="text-align:center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @product_categories.each do |product_category| %>
      <tr>
        <td><%= link_to product_category.id, product_category_path(product_category) %></td>
        <td><%= product_category.name %></td>
        <td><%= product_category.description %></td>
        <td><%=l product_category.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_category_path(product_category), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_category_path(product_category),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Está seguro de eliminar?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("CANCELAR")),
            new_product_category_path,
            :class => 'btn btn-primary' %>
