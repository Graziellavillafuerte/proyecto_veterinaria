<%- model_class = ProductCategory -%>
<div class="row">&nbsp;</div>
<div class="page-header">
  <h3><b><%=t '.title', :default => 'VER CATEGORIA DE PRODUCTO' %></B></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nombre:</strong></dt>
  <dd><%= @product_category.name %></dd>
  <dt><strong>Descripción:</strong></dt>
  <dd><%= @product_category.description %></dd>
</dl>

<%= link_to t('.back', :default => t("CERRAR")),
              product_categories_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("EDITAR")),
              edit_product_category_path(@product_category), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("ELIMINAR")),
              product_category_path(@product_category),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Está seguro de eliminar?')) },
              :class => 'btn btn-danger' %>
