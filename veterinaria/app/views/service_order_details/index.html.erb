<h1>Listing Service Order Details</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Service order</th>
      <th>Product</th>
      <th>Cita</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_order_details.each do |service_order_detail| %>
      <tr>
        <td><%= service_order_detail.quantity %></td>
        <td><%= service_order_detail.service_order_id %></td>
        <td><%= service_order_detail.product_name %></td>
        <td><%= service_order_detail.service_order.citation_id %></td>
        <td><%= link_to 'Show', service_order_detail %></td>
        <td><%= link_to 'Edit', edit_service_order_detail_path(service_order_detail) %></td>
        <td><%= link_to 'Destroy', service_order_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

