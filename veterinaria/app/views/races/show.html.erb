<%- model_class = Race -%>
<div class="page-header">
  <h3><b>VER RAZA</b></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nombre:</strong></dt>
  <dd><%= @race.name %></dd>
  <dt><strong>Descripción:</strong></dt>
  <dd><%= @race.description %></dd>
  <dt><strong>Id Categoría:</strong></dt>
  <dd><%= @race.category_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.submit.back")),
              races_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.submit.edit")),
              edit_race_path(@race), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.submit.destroy")),
              race_path(@race),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Está seguro de eliminar?')) },
              :class => 'btn btn-danger' %>
