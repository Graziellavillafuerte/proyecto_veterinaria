<%- model_class = Race -%>
<div class="row">&nbsp;</div>
<div class="page-header">
  <h3><B><%=t '.title', :default =>'RAZAS' %></B></h3>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th style="text-align: center">Id</th>
      <th style="text-align: center">Nombre</th>
      <th style="text-align: center">Descripci&uocute;n</th>
      <th style="text-align: center">Categor&iacute;a Id</th>
      <th style="text-align: center">Fecha creaci&oacute;n</th>
      <th style="text-align: center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @races.each do |race| %>
      <tr>
        <td><%= link_to race.id, race_path(race) %></td>
        <td><%= race.name %></td>
        <td><%= race.description %></td>
        <td><%= race.category_id %></td>
        <td><%=l race.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_race_path(race), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      race_path(race),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Está seguro de eliminar?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.submit.new")),
            new_race_path,
            :class => 'btn btn-primary' %>
