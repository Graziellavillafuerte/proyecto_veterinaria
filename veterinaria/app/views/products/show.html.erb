<%- model_class = Product -%>
<div class="row"></div>
<div class="page-header">
  <h3><b><%=t '.title', :default => 'VEEER PRODUCTO' %></b></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nombre:</strong></dt>
  <dd><%= @product.name %></dd>
  <dt><strong>Precio costo:</strong></dt>
  <dd><%= @product.cost_price %></dd>
  <dt><strong>Precio venta:</strong></dt>
  <dd><%= @product.sale_price %></dd>
  <dt><strong>Descripción larga:</strong></dt>
  <dd><%= @product.long_description %></dd>
  <dt><strong>Observaciones:</strong></dt>
  <dd><%= @product.observation %></dd>
  <dt><strong>Id Categoria producto:</strong></dt>
  <dd><%= @product.product_category_id %></dd>
</dl>

<%= link_to t('.back', :default => t("CERRAR")),
              products_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("EDITAR")),
              edit_product_path(@product), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("ELIMINAR")),
              product_path(@product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Está seguro de eliminar?')) },
              :class => 'btn btn-danger' %>
