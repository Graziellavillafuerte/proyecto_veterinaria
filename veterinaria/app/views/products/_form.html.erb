<%= form_for @product, :html => { :class => "form-horizontal product" } do |f| %>

    <% if @product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@product[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :cost_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cost_price, :class => 'form-control' %>
    </div>
    <%= error_span(@product[:cost_price]) %>
  </div>
  <div class="control-group">
    <%= f.label :sale_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sale_price, :class => 'form-control' %>
    </div>
    <%= error_span(@product[:sale_price]) %>
  </div>
  <div class="control-group">
    <%= f.label :long_description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :long_description, :class => 'form-control' %>
    </div>
    <%= error_span(@product[:long_description]) %>
  </div>
  <div class="control-group">
    <%= f.label :observation, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :observation, :class => 'form-control' %>
    </div>
    <%= error_span(@product[:observation]) %>
  </div>
  <div class="control-group">
    <%= f.label :product_category_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :product_category_id, :class => 'form-control' %>
    </div>
    <%= error_span(@product[:product_category_id]) %>
  </div>

  <div class="control-group">
    <label>&nbsp;</label>
  </div>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            products_path, :class => 'btn btn-default' %>

<% end %>
