<%- model_class = Product -%>
<div class="page-header">
  <h3><b><%=t '.title', :default => 'PRODUCTOS' %></b></h3>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th style="text-align: center">Id Producto</th>
      <th style="text-align: center">Nombre</th>
      <th style="text-align: center">Categor&iacute;a</th>
      <th style="text-align: center">Unid. med.</th>
      <th style="text-align: center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td align="center"><b><%= product.id%></b></td>
        <td><%= product.name %></td>
        <td><%= product.product_category_name %></td>
        <td><%= product.unit_measure_name %></td>
        <td align="center">
           <%= link_to "<i class='fa fa-eye'></i>".html_safe,
                      product_path(product) %>

          <%= link_to "<i class='fa fa-pencil'></i>".html_safe,
                      edit_product_path(product) %>
                      
          <%= link_to "<i class='fa fa-trash-o'></i>".html_safe,
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Está seguro de eliminar?')) } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="col-md-8 col-md-offset-5">
<%= link_to t('.new', :default => t("helpers.submit.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
</div>