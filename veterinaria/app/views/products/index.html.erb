<%- model_class = Product -%>
<div class="row">&nbsp;</div>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th style="text-align: center">Id</th>
      <th style="text-align: center">Nombre</th>
      <th style="text-align: center">Precio costo</th>
      <th style="text-align: center">Precio venta</th>
      <th style="text-align: center">Descripción larga</th>
      <th style="text-align: center">Observaciones</th>
      <th style="text-align: center">Categoria product Id</th>
      <th style="text-align: center">Fecha creación</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.id, product_path(product) %></td>
        <td><%= product.name %></td>
        <td><%= product.cost_price %></td>
        <td><%= product.sale_price %></td>
        <td><%= product.long_description %></td>
        <td><%= product.observation %></td>
        <td><%= product.product_category_id %></td>
        <td><%=l product.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
